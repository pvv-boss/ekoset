{
  "compilerOptions": {
    "target": "ext",
    "module": "es2018,
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noEmit": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
